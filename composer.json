{
    "name": "reliqarts/doc-weaver",
    "description": "Highly configurable, yet simple Laravel 5 documentation package. Suitable for product documentation and/or knowledge bases. Converts folder(s) of .md files into full-bread complete documentation. DocWeaver is inspired by Laravel's very own documentation mechanism.",
    "keywords": ["doc", "package", "generation", "documentation", "laravel5", "content"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "reliq",
            "email": "reliq@reliqarts.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "illuminate/support": "5.*",
        "erusev/parsedown-extra": "^0.7.1",
        "monolog/monolog": "~1.11",
        "nesbot/carbon": "^1.22.1",
        "symfony/browser-kit": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "orchestra/testbench-browser-kit": "~3.1"
    },
    "autoload": {
        "psr-4": {
            "ReliQArts\\DocWeaver\\": "src/",
            "ReliQArts\\DocWeaver\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ReliQArts\\DocWeaver\\DocWeaverServiceProvider"
            ],
            "aliases": {
                "DocWeaverHelper": "ReliQArts\\DocWeaver\\Helpers\\CoreHelper"
            }
        }
    }
}
